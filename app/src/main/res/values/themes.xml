<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RelasiRoom" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    -->

    <style name="noActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="obimagestyle">
        <item name="android:layout_height">@dimen/ob_image_size</item>
        <item name="android:layout_width">@dimen/ob_image_size</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="obtextheader" parent="textview">
        <item name="android:textSize">@dimen/ob_textheader</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="layout_style">
        <item name="android:padding">@dimen/layout_padding</item>
        <item name="android:background">@color/darkBlue</item>
    </style>

    <style name="layout_style.layout_auth_screen" parent="layout_style">
        <item name="android:padding">@dimen/padding_auth_screen</item>
    </style>

    <style name="obtextsuheader" parent="textview">
        <item name="android:textSize">@dimen/ob_textsubheader</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <!--  OB Button  -->
    <style name="obbuttonstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/obbuttonheight</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textSize">@dimen/ob_textsubheader</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="obbuttonstyle.buttonblue">
        <item name="android:background">@drawable/background_blue_corner_round_button</item>
    </style>

    <style name="obbuttonstyle.buttonpink">
        <item name="android:background">@drawable/background_pink_corner_round_button</item>
    </style>

    <style name="textInputLayoutCustom" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="colorPrimary">@color/pink</item>
    </style>


</resources>